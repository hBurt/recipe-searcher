<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.recipe.recipesearch.ui.CustomRecipes.CustomRecipe">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="408dp"
                android:layout_height="36dp"
                android:text="@string/create_custom_recipe"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/RecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/name_of_recipe"
                android:inputType="textPersonName"
                android:textColor="#000000"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/Time"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/time"
                android:inputType="textPersonName"
                android:textColor="#000000"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/IngredientInput"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="36dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/enter_ingredients_for_recipe"
                android:inputType="textPersonName"
                android:textColor="#000000"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/Directions"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="32dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/enter_directions_for_recipe"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:targetApi="o" />

            <Button
                android:id="@+id/ImgselectBTN"
                android:layout_width="408dp"
                android:layout_height="74dp"
                android:layout_marginTop="32dp"
                android:text="@string/click_to_select_an_image" />

            <ImageView
                android:id="@+id/Preview"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_favorite_black_24dp"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="TODO" />

            <Button
                android:id="@+id/CSubmit"
                android:layout_width="394dp"
                android:layout_height="76dp"
                android:layout_marginTop="40dp"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>